@using Abc.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/theme/css/style.css" rel="stylesheet" type="text/css">
    <title>Hello, world!</title>
</head>
<div class="card-deck row">
    @foreach (var urun in Model)
    {
        <div class="card" style="margin-bottom:20px;">
            <img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name">
            <div class="card-body">
                <h4 class="card-title"><a href="/Home/Details/@urun.Id"> @urun.Name</a></h4>
                <p class="card-text pt-2">@urun.Description</p>
            </div>
            <div class="card-footer">
                <small class="text-muted product-price">@urun.Price ₺</small>
                <a href="/Home/Details/@urun.Id" class="btn btn-default btn-xs text-right">>> Ürünü İncele</a>
            </div>
        </div>
    }
</div>